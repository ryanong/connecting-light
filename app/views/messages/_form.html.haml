= simple_form_for @message do |f|
  -if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  = f.input :red
  = f.input :green
  = f.input :blue
  = f.input :message
  = f.input :latitude
  = f.input :longitude
  = f.submit 'Save'
